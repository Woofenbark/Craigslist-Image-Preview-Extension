{
  "name": "Craigslist Image Preview Extension",
  "version": "1.2.0",
  "description": "Load image previews for Craigslist postings.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.craigslist.org/*",
        "http://*.craigslist.ca/*",
        "http://*.craigslist.co.uk/*",
        "http://*.craigslist.hk/*"
      ],
      "js": ["jquery.js", "clpreview.js"]
    }
  ]
}
